{
  "name": "12-node-podcast-manager",
  "version": "1.0.0",
  "main": "./lib/server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsup src/server.ts --format cjs,esm --dts --outDir lib",
    "lint": "tslint -c tslint.json src/**/*.ts",
    "prepublish": "npm run build",
    "start": "node ./lib/server.js",
    "start:dev": "tsx --env-file=.env ./src/server.ts",
    "start:watch": "tsx watch --env-file=.env ./src/server.ts",
    "start:dist": "npm run build && --env-file=.env node ./lib/server.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@types/node": "^24.2.1",
    "tslint": "^5.20.1",
    "typescript": "^5.9.2"
  },
  "files": [
    "./bin/*",
    "./lib/*"
  ],
  "typings": "./lib/index.d.ts",
  "dependencies": {
    "tsup": "^8.5.0",
    "tsx": "^4.20.3"
  }
}
